{
  "name": "react-native-bottom-sheet-manager",
  "version": "0.1.0",
  "description": "A React Native bottom sheet manager built with @gorhom/bottom-sheet.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "source": "src/index.ts",
  "react-native": "src/index.ts",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-bottom-sheet-manager-example",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "run:ios": "yarn example ios",
    "run:web": "yarn example web",
    "run:android": "yarn example android",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "bottom sheet",
    "bottom sheet manager",
    "react native bottom sheet",
    "react native bottom sheet manager"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bilaleren/react-native-bottom-sheet-manager.git"
  },
  "author": "Bilal Eren <bilal@webnoi.com> (https://github.com/bilaleren)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bilaleren/react-native-bottom-sheet-manager/issues"
  },
  "homepage": "https://github.com/bilaleren/react-native-bottom-sheet-manager#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@gorhom/bottom-sheet": "^4.6.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-flow": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/react-native": "^12.4.3",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.44",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "react-native": "0.73.4",
    "react-native-builder-bob": "^0.20.0",
    "react-native-gesture-handler": "^2.15.0",
    "react-native-reanimated": "^2.8.0",
    "react-test-renderer": "^18.2.0",
    "release-it": "^15.0.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": ">=1.10.1",
    "react-native-reanimated": ">=2.2.0"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "clearMocks": true,
    "resetMocks": true,
    "resetModules": true,
    "setupFiles": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "utils",
      "<rootDir>"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-env.setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native(-.*)?|jest(-.*)?|@react-native(-community)?)/)"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx",
      "json"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "tsc": "./node_modules/.bin/tsc",
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
